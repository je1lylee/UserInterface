<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <!--只是暂时将唐僧君放在这里-->
    <ImageView
        android:id="@+id/friend_head_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/tangseng" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:minHeight="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/moment_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="这里应该是名字"
            android:textColor="@color/moment_name" />

        <TextView
            android:id="@+id/moment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="这里应该是正文来的"
            android:textSize="15dp" />
        <!--放置2x3单元格-->
        <GridLayout
            android:id="@+id/grid_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="2">
            <ImageView android:id="@+id/grid_1" />

            <ImageView android:id="@+id/grid_2" />

            <ImageView android:id="@+id/grid_3" />

            <ImageView android:id="@+id/grid_4" />

            <ImageView android:id="@+id/grid_5" />

            <ImageView android:id="@+id/grid_6" />
        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/moment_sendtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="23分钟前"
                android:textColor="@color/moment_send_time"
                android:textSize="12dp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>